{
  "extends": "./node_modules/@node-ts/code-standards/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.integration.ts",
    "src/**/test"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["ES2020"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    // bullmq types are busted
    "skipLibCheck": true
  }
}
